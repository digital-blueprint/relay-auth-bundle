{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:weekends",
    ":automergePatch"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["symfony/"],
      "allowedVersions": "<6"
    },
    {
      "matchPackagePrefixes": ["web-token/"],
      "allowedVersions": "<3"
    },
    {
      "matchPackageNames": ["friendsofphp/php-cs-fixer"],
      "allowedVersions": "<3.5"
    }
  ],
  "js": {
    "enabled": false
  }
}